        <ListPreference
            android:dialogTitle="@string/plv_core_quality_setting_dialogtitle"
            android:entries="@array/plv_core_twipple_quality"
            android:entryValues="@array/plv_core_twipple_quality_value"
            android:key="plv_core_twipple_quality_wifi"
            android:title="@string/plv_core_twipple_quality_title"/>

        <ListPreference
            android:dialogTitle="@string/plv_core_quality_setting_dialogtitle"
            android:entries="@array/plv_core_imgly_quality"
            android:entryValues="@array/plv_core_imgly_quality_value"
            android:key="plv_core_imgly_quality_wifi"
            android:title="@string/plv_core_imgly_quality_title"/>

        <ListPreference
            android:dialogTitle="@string/plv_core_quality_setting_dialogtitle"
