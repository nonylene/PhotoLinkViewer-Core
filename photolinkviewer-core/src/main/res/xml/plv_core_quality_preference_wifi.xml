<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="plv_core_is_original_wifi"
        android:summary="@string/plv_core_original_switch_summary"
        android:title="@string/plv_core_original_switch_title"/>

