        android:title="@string/plv_core_quality_batch_title"/>

    <PreferenceCategory
        android:title="@string/plv_core_quality_sites_categoryname">

        <ListPreference
            android:dialogTitle="@string/plv_core_quality_setting_dialogtitle"
            android:entries="@array/plv_core_flickr_quality"
