<?xml version="1.0" encoding="utf-8"?>
<net.nonylene.photolinkviewer.core.view.SaveDialogItemView
    android:id="@+id/save_path_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="5dp">

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/path_image_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleX="0.85"
            android:scaleY="0.85"
            tools:src="@drawable/plv_core_ic_movie_black"/>

        <ImageView
            android:id="@+id/path_check_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plv_core_ic_check_circle_black"/>

    </FrameLayout>

    <EditText
        android:id="@+id/path_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        />

</net.nonylene.photolinkviewer.core.view.SaveDialogItemView>