<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/videoshowframe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/plv_core_activity_horizontal_margin"
    android:paddingLeft="@dimen/plv_core_activity_horizontal_margin"
    android:paddingRight="@dimen/plv_core_activity_horizontal_margin"
    android:paddingStart="@dimen/plv_core_activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PLVShowActivity">

    <VideoView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/plv_core_background"/>

    <ProgressBar
        android:id="@+id/show_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</FrameLayout>
