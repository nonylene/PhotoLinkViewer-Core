<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/plv_core_transparent</item>
        <item name="android:windowAnimationStyle">@style/noActivityAnimation</item>
    </style>

    <style name="noActivityAnimation" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

    <style name="PagerTabStripText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="FloatingActionButtonBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="pressedTranslationZ">0dp</item>
    </style>

    <style name="FloatingActionButton" parent="FloatingActionButtonBase">
        <item name="android:layout_margin">@dimen/plv_core_button_frame_margin</item>
    </style>

    <style name="FloatingActionButtonBottom" parent="FloatingActionButtonBase">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/plv_core_button_frame_margin</item>
        <item name="android:layout_marginRight">@dimen/plv_core_button_frame_margin</item>
        <item name="android:layout_marginLeft">@dimen/plv_core_button_frame_margin</item>
    </style>

    <style name="FABParentLinearLayout">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FABSideTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
