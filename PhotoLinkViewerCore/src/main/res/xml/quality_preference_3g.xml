<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:key="plv_core_is_wifi_enabled"
        android:summary="@string/quality_switch_summary"
        android:title="@string/quality_switch_title"/>

    <Preference
        android:key="quality_note"
        android:summary="@string/notes_pref_summary"
        android:title="@string/notes_pref_title"/>

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="plv_core_is_original_3g"
        android:summary="@string/original_switch_summary"
        android:title="@string/original_switch_title"/>

    <Preference
        android:key="quality_3g_batch"
        android:summary="@string/quality_batch_summary"
        android:title="@string/quality_batch_title"/>

    <PreferenceCategory
        android:title="@string/quality_sites_categoryname">

        <ListPreference
            android:dialogTitle="@string/quality_setting_dialogtitle"
            android:entries="@array/flickr_quality"
            android:entryValues="@array/flickr_quality_value"
            android:key="plv_core_flickr_quality_3g"
            android:title="@string/flickr_quality_title"/>

        <ListPreference
            android:dialogTitle="@string/quality_setting_dialogtitle"
            android:entries="@array/twitter_quality"
            android:entryValues="@array/twitter_quality_value"
            android:key="plv_core_twitter_quality_3g"
            android:title="@string/twitter_quality_title"/>

        <ListPreference
            android:dialogTitle="@string/quality_setting_dialogtitle"
            android:entries="@array/twipple_quality"
            android:entryValues="@array/twipple_quality_value"
            android:key="plv_core_twipple_quality_3g"
            android:title="@string/twipple_quality_title"/>

        <ListPreference
            android:dialogTitle="@string/quality_setting_dialogtitle"
            android:entries="@array/imgly_quality"
            android:entryValues="@array/imgly_quality_value"
            android:key="plv_core_imgly_quality_3g"
            android:title="@string/imgly_quality_title"/>

        <ListPreference
            android:dialogTitle="@string/quality_setting_dialogtitle"
            android:entries="@array/instagram_quality"
            android:entryValues="@array/instagram_quality_value"
            android:key="plv_core_instagram_quality_3g"
            android:title="@string/instagram_quality_title"/>

        <ListPreference
            android:dialogTitle="@string/quality_setting_dialogtitle"
            android:entries="@array/nicoseiga_quality"
            android:entryValues="@array/nicoseiga_quality_value"
            android:key="plv_core_nicoseiga_quality_3g"
            android:title="@string/nicoseiga_quality_title"/>

        <ListPreference
            android:dialogTitle="@string/quality_setting_dialogtitle"
            android:entries="@array/tumblr_quality"
            android:entryValues="@array/tumblr_quality_value"
            android:key="plv_core_tumblr_quality_3g"
            android:title="@string/tumblr_quality_title"/>
    </PreferenceCategory>

</PreferenceScreen>